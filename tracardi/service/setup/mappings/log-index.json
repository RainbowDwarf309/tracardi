{
  "index_patterns": [
    "%%TEMPLATE_PATTERN%%"
  ],
  "template": {
    "settings": {
    "number_of_shards": %%SHARDS%%,
    "number_of_replicas": %%REPLICAS%%,
      "index.refresh_interval": "30s"
    },
    "mappings": {
      "_meta": {
        "version": "%%VERSION%%",
        "name": "%%PREFIX%%"
      },
      "dynamic": "strict",
      "properties": {
        "date": {
          "type": "date"
        },
        "message": {
          "type": "keyword"
        },
        "logger": {
          "type": "keyword"
        },
        "file": {
          "type": "keyword"
        },
        "line": {
          "type": "integer"
        },
        "level": {
          "type": "keyword"
        },
        "exc_info": {
          "type": "keyword"
        },
        "stack_info": {
          "type": "keyword"
        },
        "user_id": {
          "type": "keyword", "ignore_above": 40
        },
        "event_id": {
          "type": "keyword", "ignore_above": 40
        },
        "profile_id": {
          "type": "keyword", "ignore_above": 40
        },
        "flow_id": {
          "type": "keyword", "ignore_above": 40
        },
        "node_id": {
          "type": "keyword", "ignore_above": 40
        },
        "origin": {
          "type": "keyword", "ignore_above": 40
        },
        "class_name": {
          "type": "keyword"
        },
        "module": {
          "type": "text"
        }
      }
    },
    "aliases": {
      "%%ALIAS%%": {}
    }
  }
}