{
  "settings": {
    "number_of_shards": %%CONF_SHARDS%%,
    "number_of_replicas": %%REPLICAS%%
  },
  "mappings": {
    "_meta": {
      "version": "%%VERSION%%",
      "name": "%%PREFIX%%"
    },
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword", "ignore_above": 64
      },
      "profile": {
        "properties": {
            "id": {
              "type": "keyword"
            }
        }
      },
      "metadata": {
        "properties":{
          "time": {
            "properties": {
              "insert": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time ||epoch_millis"
              },
              "create": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time ||epoch_millis"
              },
              "update": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time ||epoch_millis"
              },
              "due": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time ||epoch_millis"
              },
              "expired": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time ||epoch_millis"
              }
            }
          }
        }
      },
      "type": {
        "type": "keyword"
      },
      "properties": {
        "type": "flattened"
      },
      "traits": {
        "type": "object",
        "dynamic": "true"
      }
    }
  },
  "aliases": {
    "%%ALIAS%%": {}
  }
}